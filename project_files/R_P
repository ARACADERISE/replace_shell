cyan='\033[1;36m'
red='\033[1;31m'
cd && mv -v replace_shell /data/data/com.termux/files/usr/bin && cd /data/data/com.termux/files/usr/bin/replace_shell && sh ./run && mv -v run /data/data/com.termux/files/usr/bin/replace_shell && chmod +x /data/data/com.termux/files/usr/bin/replace_shell/run

# IMPORTANT
# WHERE THE FILE WILL BE FOUND
# NOT ROOT ACCESSED
# BUT RAN FOR ROOT

echo "Setup.sh booted"
if ! command -v python > /dev/null 2>&1; then
  echo "Requires Python. \n Do you want the file to download python for you?[y/n]"
  read -p ">> " uu
  if [ $uu == 'y' ]
  then
    pkg install python
  else
    echo "Please download python to use the project"
  fi
fi 


